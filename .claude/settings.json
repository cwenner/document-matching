      "Bash(find:*)",
      "Bash(gh pr:*)",
      "Bash(gh run view:*)",
      "Bash(shopt:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(source:*)",
      "Bash(PYTHONPATH=src pytest:*)",
      "Bash(PYTHONPATH=src nox:*)"
