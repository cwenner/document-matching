[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503, F403, F401, F811, F841, E722, B010, S101, S108, B008, C901, E402
max-complexity = 18
select = B,C,E,F,W,T4,B9
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg,
    .venv,
    .venv-wsl,
    .nox,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache,
    venv,
    migrations,
    node_modules

# Per-file ignores
per-file-ignores =
    # Allow print statements and assert in tests
    tests/*:S101,S108
    # Allow complexity in config files
    */config.py:C901
    # Allow imports at module level in __init__ files
    */__init__.py:F401,F403